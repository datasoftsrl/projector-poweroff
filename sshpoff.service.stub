[Unit]
Description=SSH Poweroff web service

[Service]
Type=simple
ExecStart=/usr/bin/gunicorn -b 0.0.0.0:<port> sshpoff:app
WorkingDirectory=/opt/ssh-poweroff
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ppoff
User=root
Group=root

[Install]
WantedBy=multi-user.target
